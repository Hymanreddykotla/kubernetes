----working with playbook-----------
#cd /etc/ansible
#mkdir project-x
vim sample-playbook.yaml
---
- name: this is sample playbook
  hosts: all
  tasks:
    - name: creating user
      user:
        name: sachin
        uid: 1300
        home: /heros
        shell: /bin/bash
        state: present
    - name: installing apache
      yum:
        name: httpd
        state: present
    - name: install cifs
      yum:
        name: cifs-utils
        state: present
    - name: install vsftpd
      dnf:
        name: vsftpd
        state: latest
...
# ansible-playbook sample-playbook.yaml --syntax-check
#ansible-playbook sample-playbook.yaml -C
#ansible-playbook sample-playbook.yaml
